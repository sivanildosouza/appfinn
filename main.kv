	canvas.before:
		Rectangle:
			size: self.size
			pos: self.pos
			source: 'img/b.png' if self.state == 'normal' else 'img/bap.png'

	
<BannerMov>:
	canvas.before:
		Color:
			rgba: 0,0,0,.05
		RoundedRectangle:
			size: self.size
			pos: self.pos
			radius: [20]
		
		
	
	